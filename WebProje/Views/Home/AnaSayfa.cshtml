

@{
    ViewData["Title"] = "AnaSayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="container">
        @await Component.InvokeAsync("Slider")
        <div class="column">
            <ul class="latestnews">
                <li style="text-align: center;">
                    <p style="font-size:50px;">RESTful API</p>
                </li>
                <li>
                    <p style="font-size:15px;">"/api/Haber" adresine giderek tüm apilere ulaşabilirsiniz.</p>
                    <br/>
                    <br />
                    <p style="font-size:15px;">Apileri görüntülemek için kaynağı görüntüleyin.</p>
                </li>
                <li class="last">
                    <a asp-action="Haber" asp-controller="api">
                        <button style="background-color: #555555;
                                border: none;
                                color: white;
                                padding: 15px 32px;
                                text-align: center;
                                text-decoration: none;
                                display: inline-block;
                                font-size: 24px;
                                margin-top: 25px;">
                        
                                Kaynağı Görüntüleyin
                       
                        </button>
                    </a>
                </li>
            </ul>
        </div>
        <br class="clear" />
    </div>
</div>

<div class="wrapper">
    <div id="adblock">
        <br class="clear" />
    </div>
    <div id="hpage_cats">
        
        @await Component.InvokeAsync("AnaSayfaHaber")

        <br class="clear" />
    </div>
</div>