@model WebProje.Models.AdminUser

@{
    ViewData["Title"] = "Kayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<div class="wrapper">
    <div class="container">
        <div class="row mt-5 pb-5">
            <div class="row pb-3">
                <div class="col-sm-8 mx-auto">
                    <form asp-action="Kayit" asp-controller="Home">
                        <div class="row mt-2 pb-2">
                            <div class="col-md-8">
                                <fieldset>
                                    <label asp-for="UserName" class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2 text-dark required">Kullanıcı Adı</label>
                                    <input asp-for="UserName" type="text" class="form-control" required="">
                                </fieldset>
                            </div> 
                            <div class="col-md-8">
                                <fieldset>
                                    <label asp-for="Email" class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2 text-dark required">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" required="">
                                </fieldset>
                            </div>
                            <div class="col-md-8">
                                <fieldset>
                                    <label asp-for="Password" class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2 text-dark required">Şifre</label>
                                    <input asp-for="Password" rows="6" class="form-control" type="password" required="">
                                </fieldset>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <fieldset>
                                        <button type="submit" class="btn btn-dark">Kayıt Ol</button>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <br class="clear" />
    </div>
</div>