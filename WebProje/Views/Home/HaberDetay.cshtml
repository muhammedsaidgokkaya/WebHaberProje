
@{
    ViewData["Title"] = "HaberDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<div class="wrapper">
    <div class="container">
        <div class="row mt-5 pb-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <img class="card-img-top" src="~/Resimler/HaberResim/@Model.ResimYol" alt="Card image cap">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">@Model.Baslik</h5>
                        <h6 class="card-text">@Model.Konu</h6>
                        <p class="card-text">@Model.Aciklama</p>
                        <a asp-action="Haber" asp-controller="api" asp-route-id="@Model.Id" class="btn btn-primary btn-md font-weight-semibold btn-py-2 px-4">Kaynağa Git</a>
                    </div>
                </div>
            </div>
        </div>
        <br class="clear" />
    </div>
</div>